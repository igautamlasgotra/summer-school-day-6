{
  "manifest_version": 3,
  "name": "Mausam-Vichar",
  "version": "1.0",
  "description": "Shows weather based on user's current location",
  "permissions": ["geolocation"],
  "host_permissions": ["https://api.openweathermap.org/","https://api.opencagedata.com/"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  }
}
